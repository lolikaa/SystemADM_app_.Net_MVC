@model IEnumerable<SystemADM.Models.Building>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/SystemLayout.cshtml";
}

<h2>Nasze nieruchomości</h2>

<p>
    @Html.ActionLink("Dodaj nową nieruchomość", "Create")
</p>
<br /><br />

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.nazwa_wspolnoty)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ulica)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.miasto)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.kod_pocztowy)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.nazwa_wspolnoty)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ulica)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.miasto)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.kod_pocztowy)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.id_budynek }) |
            @Html.ActionLink("Details", "Details", new { id=item.id_budynek }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.id_budynek })
        </td>
    </tr>
}

</table>
