@model SystemADM.Models.User
@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Logowanie</h2>

@using (Html.BeginForm("Login", "Login", FormMethod.Post))
{
    <fieldset>
       

        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true)
        @if (@ViewBag.Message != null)
        {
            <div>
                <p style="color: red; font-size: 17px;"> @ViewBag.Message </p>
            </div>
        }
        <table>
            <tr>
                <td>@Html.LabelFor(a => a.email)</td>
                <td>@Html.TextBoxFor(a => a.email)</td>
                <td>@Html.ValidationMessageFor(a => a.email)</td>
            </tr>
            <tr>
                <td>
                    @Html.LabelFor(a => a.haslo)
                </td>
                <td>
                    @Html.PasswordFor(a => a.haslo)
                </td>
                <td>
                    @Html.ValidationMessageFor(a => a.haslo)
                </td>
            </tr>
            <tr>
                <td></td>
                <td>
                    <input type="submit" value="Zaloguj się" />
                </td>
                <td></td>
            </tr>
        </table>
    </fieldset>
}

