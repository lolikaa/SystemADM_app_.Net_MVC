@model SystemADM.Models.Ticket

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/SystemLayout.cshtml";
}

<h2>Utwórz nowe zgłoszenie</h2>


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal">
    <h4>Ticket</h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-group">
        @Html.LabelFor(model => model.id_status, "id_status", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.DropDownList("id_status", null, htmlAttributes: new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.id_status, "", new { @class = "text-danger" })
        </div>
    </div>

  
    <div class="form-group">
        @Html.LabelFor(model => model.id_uzytkownik, "id_uzytkownik", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.DropDownList("id_uzytkownik", null, htmlAttributes: new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.id_uzytkownik, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.id_budynek, "id_budynek", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.DropDownList("id_budynek", null, htmlAttributes: new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.id_budynek, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.temat, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.temat, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.temat, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.opis, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.opis, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.opis, "", new { @class = "text-danger" })
        </div>
    </div>

    @Html.HiddenFor(model => model.data_zgloszenia)
    @Html.HiddenFor(model => model.data_wykonania)
  

    <div class="form-group">
        @Html.LabelFor(model => model.planowana_data_wykonania, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.planowana_data_wykonania, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.planowana_data_wykonania, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Utwórz" class="btn btn-default" />
        </div>
    </div>
</div>
}

<div>
    @Html.ActionLink("Powrót do listy zgłoszeń", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
